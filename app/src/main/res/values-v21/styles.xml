<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:ThemeOverlay.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary_light</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="android:colorAccent">@color/colorAccent_light</item>
        <item name="themeColorAccent">@color/colorAccent_light</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item-->
    </style>

    <style name="AppTheme.Dark" parent="android:ThemeOverlay.Material.Dark">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background_dark</item>
        <item name="android:colorPrimary">@color/colorPrimary_dark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="android:colorAccent">@color/colorAccent_dark</item>
        <item name="themeColorAccent">@color/colorAccent_dark</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item-->
    </style>

    <style name="ScreenHeader">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Headline</item>
    </style>

    <style name="ScreenSubHeader">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="VolumeLevel_Title">
        <item name="android:textAppearance">@android:style/TextAppearance.Material</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="VolumeProfile_Title">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="VolumeProfile_Button" parent="android:Widget.Material.Button.Small" />

    <style name="Settings_button" parent="android:Widget.Material.Button.Borderless.Colored" />

    <style name="Profile_Add_Button" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="CrashReportTheme" parent="android:Theme.Material.Dialog.Alert"/>

</resources>
