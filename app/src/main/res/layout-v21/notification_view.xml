<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/root_notification_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/app_icon"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher_new"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/app_icon"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/app_icon"
        android:id="@+id/app_title"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/remove_notification_action"
        android:text="x"
        android:layout_marginTop="-8dp"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
        android:textSize="21sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/media_slider"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/app_icon"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@android:style/TextAppearance.Material.Notification"
            android:textSize="17sp"
            android:textStyle="normal"
            android:layout_marginEnd="8dp"
            android:text="@string/volumeType_media"
            android:id="@+id/media_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="-"
            android:id="@+id/media_down"
            android:gravity="center"
            android:textSize="25sp"
            android:background="#ddd"
            android:textColor="@android:color/black"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:background="@drawable/notification_slider"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/media_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <TextView
            android:background="#ddd"
            android:id="@+id/media_up"
            android:text="+"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="25sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

    </LinearLayout>




    <GridLayout
        android:columnCount="4"
        android:rowCount="4"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/media_slider"
        android:id="@+id/notifications_user_profiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>

